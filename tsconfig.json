{
  "compilerOptions": {
    "incremental": true,
    "pretty": true,
    "disableSizeLimit": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "lib": [
      "es2019"
    ]
  },
  "include": ["src"],
  "ts-node": {
    "transpileOnly": true
  }
}
